{
  "name": "lsphere",
  "version": "0.1.0",
  "module": "index.ts",
  "type": "commonjs",
  "bin": {
    "lsphere": "./dist/lsphere"
  },
  "scripts": {
    "build": "ncc build src/cli.ts -o dist -m && mv dist/index.js dist/lsphere && chmod +x dist/lsphere",
    "run": "node dist/lsphere",
    "clean": "rm -rf dist output",
    "show": "xdg-open output/composite.svg || open output/composite.svg || echo 'Open output/composite.svg manually'",
    "help": "echo 'Available scripts: build, run, clean, show, help, lint, format'",
    "lint": "eslint 'src/**/*.ts'",
    "format": "prettier --write 'src/**/*.ts'"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@types/bun": "latest",
    "@types/d3-color": "^3.1.3",
    "@types/d3-hierarchy": "^3.1.7",
    "@types/d3-interpolate": "^3.0.4",
    "@types/d3-scale": "^4.0.9",
    "@types/node": "^24.5.2",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "@vercel/ncc": "^0.38.4",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.6.2",
    "typescript-eslint": "^8.44.0"
  },
  "peerDependencies": {
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "commander": "^14.0.1",
    "d3-color": "^3.1.0",
    "d3-hierarchy": "^3.1.2",
    "d3-interpolate": "^3.0.1",
    "d3-scale": "^4.0.2",
    "got": "^14.4.9",
    "kleur": "^4.1.5"
  }
}
